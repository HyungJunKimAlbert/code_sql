

SELECT *, CAST(A.PTMIBRTD AS int) AS PTMIBRTD_NEW 
FROM N_16.dbo.N_DATA a
JOIN N_16.dbo.DATA_16_18 b
ON a.PTMIIDNO = b.환자ID
AND (CAST(b.병원도착년월일 AS datetime)) = (CAST(a.PTMIINDT AS datetime))
ORDER BY A.PTMIIDNO, PTMIINDT;



UPDATE N_16.dbo.N_DATA SET PTMIBRTD= NULL
WHERE ISNUMERIC(PTMIBRTD)=0




-- CAST(PTMIBRTD_NEW AS INT) AS PTMIBRTD INTO #TEMP3 FROM (SELECT LEFT(PTMIBRTD,3) AS PTMIBRTD_NEW FROM N_16.dbo.N_DATA)V



UPDATE N_16.dbo.N_DATA SET PTMIBRTD= LEFT(PTMIBRTD,3);




ALTER TABLE N_16.dbo.N_DATA
ALTER COLUMN PTMIBRTD int;
